{% sw_extends '@Storefront/storefront/page/product-detail/index.html.twig' %}

{% block page_product_detail %}
    {{ parent() }}
    {% set landings = page.blogs %}
    <section class="article-info">
        <div class="container">
            <h2>Blogeinträge für dieses Produkt</h2>
            <div class="box-related-posts">
                {% for landing in landings %}
                    <main class="cards">
                        <article class="card">
                            <div class="imgframe">
                                <a href="{{ landing.url }}"><img
                                            src="{{ landing.media }}"></a>
                            </div>
                            <div class="text">
                                <a href="https://www.stereotec.ch/blog/video-ueber-die-geschichte-von-nad-rowen/">
                                    {{ landing.urlName }}
                                </a>
                            </div>
                        </article>
                    </main>
                {% endfor %}
            </div>
        </div>
    </section>
    <style>
        .article-info .box-related-posts {
            width: auto;
            display: flex;
            flex-wrap: wrap;
        }

        .article-info .cards {
            display: inline-flex;
            flex-wrap: wrap;
            flex-direction: row;
            width: 300px;
        }

        .article-info .card {
            flex: auto;
            margin: 10px;
            border: 1px solid #ccc;
            box-shadow: 2px 2px 6px 0px rgba(0, 0, 0, 0.3);
            min-height: 150px;
            justify-content: center;
        }

        .article-info .imgframe {
            min-height: 175px;
            min-width: 175px;
            position: relative;
        }

        .article-info .col-main a {
            color: #ff7214;
        }

        .article-info .card img {
            max-width: 100%;
            max-height: 175px;
            margin: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            margin-right: -50%;
            transform: translate(-50%, -50%);
            padding: 10px 0 0;
        }

        .article-info .card .text {
            padding: 0 20px 20px;
            align-self: flex-start;
        }

        .article-info .card .text a {
            display: block;
            padding: 5px;
            color: #ff7214;
            text-decoration: none;
        }

        .article-info h2 {
            margin-bottom: 15px;
            padding: 7px 0;
            border-bottom: 1px solid #e5e5e5;
            font-size: 2em;
            line-height: 1.25em;
        }

        .article-info .container {
            max-width: 100%;
        }
    </style>
{% endblock %}